{
  "compilerOptions": {
    "allowJs": true,
    "declaration": true,
    "esModuleInterop": true,
    "module": "CommonJS",
    "moduleResolution": "nodenext",
    "outDir": "./build",
    "sourceMap": true,
    "strict": true,
    "strictNullChecks": true,
    "target": "ES2018"
  },
  "include": ["./src/**/*.ts"],
  "exclude": ["./test/**/*.ts"]
}
